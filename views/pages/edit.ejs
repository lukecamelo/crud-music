<div class="card">
  <div class="card-content">
    <div class="content">
      <h1 class="title">
        Editing <%= album.name %>
      </h1>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-content">

    <% if (errors.length > 0) { %>
      <div>
        <% for (error of errors) { %>
          <%= error %> <br>
        <% } %>
      </div>
    <% } %>

    <form action="/albums/<%= album.slug %>" method="POST">

      <label>Title</label>
      <input type="text" name="name" value="<%= album.name %>">

      <label>Artist</label>
      <input type="text" name="artist" value="<%= album.artist %>">

      <label>Rating</label>
      <input type="number" min="1" max="5" name="rating" value="<%= album.rating %>">

      <button type="submit" class='button is-primary'>Update</button>
    </form>
  </div>
</div>